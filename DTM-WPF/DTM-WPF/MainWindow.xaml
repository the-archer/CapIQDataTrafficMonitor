<Window x:Class="DTM_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="519" Width="741">
    
    <Grid Height="429">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="156*" />
            <ColumnDefinition Width="563*" />
        </Grid.ColumnDefinitions>
        <Button Content="Button" Height="23" HorizontalAlignment="Left" Margin="19,41,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="button1_Click" Grid.Column="1" />
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="65,41,0,0" Name="comboBox1" VerticalAlignment="Top" Width="120" SelectionChanged="comboBox1_SelectionChanged" ItemsSource="{Binding}" />
        <ContentControl Height="347" HorizontalAlignment="Left" Margin="12,57,0,0" Name="contentControl1" VerticalAlignment="Top" Width="816" Content="{Binding Path=Content, ElementName=button1}" Grid.ColumnSpan="2">
            
        </ContentControl>
    </Grid>
</Window>
